<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:padding="10sp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/repoavatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorAccent" />
        <TextView
            android:padding="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/profileuserid"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:padding="10sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profileemail"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:padding="10sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profilefname"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:padding="10sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profilelname"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progress_bar"
        android:visibility="invisible"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30sp"
        android:id="@+id/no_network2"
        android:visibility="invisible"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/offline"
            android:layout_width="174dp"
            android:layout_height="92dp"
            android:layout_centerInParent="true"
            android:src="@drawable/offlineimage" />

        <TextView
            android:layout_margin="15sp"
            android:layout_below="@+id/offline"
            android:id="@+id/offlinetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/offlinetext" />

        <Button
            android:id="@+id/retry2"
            android:layout_margin="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/offlinetext"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border1"
            android:textColor="@color/white"
            android:text="@string/retry" />

    </RelativeLayout>


</RelativeLayout>